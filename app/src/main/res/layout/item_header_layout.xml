<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_item_name"
            android:text="paras"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/circleImage"/>
        <TextView
            android:id="@+id/txt_name_des"
            android:layout_width="wrap_content"
            android:text="@string/des"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@id/txt_item_name"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@id/txt_item_name"
            android:layout_height="wrap_content"/>
        <com.jackandphantom.circularimageview.CircleImage
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nature"
            android:background="@color/white"
            android:layout_marginStart="10dp"
            android:id="@+id/circleImage" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/light_gray"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@id/txt_item_name"
            android:layout_below="@id/txt_name_des"/>

</RelativeLayout>